    "offline_mode": false,
    "max_retries": 3
  },
  "integrations": {
    "slack_enabled": false,
    "slack_webhook_url": "",
    "slack_bot_token": "",
    "trello_enabled": false,
    "trello_api_key": "",
    "trello_token": "",
    "notion_enabled": false,
    "notion_token": "",
    "dropbox_enabled": false,
    "dropbox_token": ""
  },
  "data": {
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "cloud_sync": false,
    "export_format": "json",
    "data_retention_days": 365,
    "cache_enabled": true,
    "cache_size_mb": 100
