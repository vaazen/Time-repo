{
  "ui": {
    "language": "ru",
    "theme": "dark",
    "animations_enabled": true,
    "window_width": 1200,
    "window_height": 800,
    "auto_save_interval": 30,
    "font_size": 12,
    "show_notifications": true
  },
  "ai": {
    "provider": "openai",
